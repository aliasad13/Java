package com.scanner;

import java.util.Scanner;

public class Scannr{
public static void main(String[] args) {
	System.out.print("enter the first number here : ");
	double n=0;double m;
	Scanner sc = new Scanner(System.in);
	n = sc.nextDouble();
	
	System.out.println("enter the 2nd no here : ");
	m = sc.nextDouble();
	System.out.println("the sum is "+n+m);
	
}	
}

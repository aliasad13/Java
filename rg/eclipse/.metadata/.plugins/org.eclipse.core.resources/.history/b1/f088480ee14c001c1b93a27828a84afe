package variablearguments;
class Add{
	int num1,num2,result;
	public void add() {					//int is the return type here.// public void add(){
		                                                               //  int k=i+j; } can be used.
	result =  num1 + num2 ;
		
	}
	
}


public class VarArgs {

	public static void main(String[] args) {
		Add obj = new Add();
		obj.num1=5;
		obj.num2=4;
		
	obj.add();
		
		System.out.print(obj.result); 

	}

}

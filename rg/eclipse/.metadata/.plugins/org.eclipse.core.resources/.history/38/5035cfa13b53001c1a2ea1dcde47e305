package patterns;

/*
 *      *            *
 *     **           * *
 *    ***    or    * * *
 *   ****         * * * *        
 *  *****        * * * * *    
 */
     

public class Pattern6 {

	public static void main(String[] args) {
		for (int i=1;i<=5;i++){
			
			
			for (int j=5;j>=i;j--)
			{
				System.out.print(" ");
			}
			
			for (int j=1;j<=i;j++){
				System.out.print(i+"");   //if we remove the space here we will get the required pattern,else we will get the equi triangle 
			}
			System.out.println();
			}
		
		for (int i=1;i<=5;i++)
		{
			for (int j=1;j<=i;j++){
				System.out.print(" ");
			
			}
			
			for (int j=5;j>=i;j--)
			{
				System.out.print(i);
			}
			System.out.println();
			
			
			
			
		}
		}
		
		
		
		
		
	}



package variablearguments;
class Add{
	
	public int add(int i,int j ) {					//int is the return type here.// public void add(){
		                                                               //  int k=i+j; } can be used.
	 return i+j;
		
	}
	
}


public class VarArgs {

	public static void main(String[] args) {
		Add obj = new Add();
		
		obj.add(4, 5);
		
		System.out.print(obj.add(4,5)); 

	}

}
